<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:minHeight="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

    </android.support.v7.widget.RecyclerView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:stretchColumns="0,2,4,6">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="0"
            android:textColor="#333333"
            android:textSize="30sp" />

        <View style="@style/line_calc" />


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <Button
                android:id="@+id/bt7"
                style="@style/num_calc"
                android:text="7" />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt8"
                style="@style/num_calc"
                android:text="8" />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt9"
                style="@style/num_calc"
                android:text="9" />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt_divide"
                style="@style/num_calc"
                android:text="รท" />

        </TableRow>

        <View style="@style/line_calc" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <Button
                android:id="@+id/bt4"
                style="@style/num_calc"
                android:text="4" />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt5"
                style="@style/num_calc"
                android:text="5" />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt6"
                style="@style/num_calc"
                android:text="6" />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt_multiply"
                style="@style/num_calc"
                android:text="ร" />

        </TableRow>

        <View style="@style/line_calc" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <Button
                android:id="@+id/bt1"
                style="@style/num_calc"
                android:text="1" />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt2"
                style="@style/num_calc"
                android:text="2" />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt3"
                style="@style/num_calc"
                android:text="3" />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt_minus"
                style="@style/num_calc"
                android:text="-" />

        </TableRow>

        <View style="@style/line_calc" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <Button
                android:id="@+id/bt_clear"
                style="@style/num_calc"
                android:text="clear" />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt0"
                style="@style/num_calc"
                android:text="0" />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt_dot"
                style="@style/num_calc"
                android:text="." />

            <View style="@style/line_calc_v" />

            <Button
                android:id="@+id/bt_plus"
                style="@style/num_calc"
                android:text="+" />

        </TableRow>

        <View style="@style/line_calc" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <Button
                android:id="@+id/bt_equal"
                style="@style/num_calc"
                android:layout_span="8"
                android:text="=" />

            <View
                style="@style/line_calc_v"
                android:background="@android:color/transparent" />
        </TableRow>

    </TableLayout>

</LinearLayout>